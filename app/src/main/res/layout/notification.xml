<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <ImageView
        android:id="@+id/gfdhstrdsga"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_centerVertical="true"
        android:paddingLeft="2sp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="64dp"
        android:layout_toLeftOf="@+id/but5t5onnot5i"
        android:background="#00000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/noticationname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="湖科音乐，属于科大的音乐"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/noticationsinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="music"
            android:textColor="#b5b5b5"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/but5t5onnot5i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:paddingRight="2sp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/notificationplay"
            android:background="@drawable/ic_play_arrow_white_18dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageView
            android:id="@+id/notificationnext"
            android:src="@drawable/ic_skip_next_white_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

</RelativeLayout>